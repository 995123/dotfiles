#xkill 
super + shift + x 
	xkill
#Vol up 
XF86AudioRaiseVolume
	amixer -q set Master 5%+ && pkill -RTMIN+10 i3blocks
#Vol down 
XF86AudioLowerVolume
	amixer -q set Master 5%- && pkill -RTMIN+10 i3blocks
#vol toggle 
XF86AudioMute
	amixer -q set Master toggle && pkill -RTMIN+10 i3blocks
#light up 
XF86MonBrightnessUp
	backlight_control +5 && pkill -RTMIN+20 i3blocks
#light down 
XF86MonBrightnessDown
	backlight_control -5 && pkill -RTMIN+20 i3blocks
#dmenu 
super + shift + d 
